<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.tack" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Lyrebird</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="~1.3.0" />
    <plugin name="cordova-plugin-contacts" spec="~2.2.0" />
    <plugin name="cordova-plugin-compat" spec="~1.0.0" />
    <engine name="android" spec="~5.2.2" />
    <plugin name="cordova-plugin-ble-central" spec="~1.1.2" />
    <plugin name="cordova-plugin-velda-devicefeedback" spec="~0.0.2" />

    <!-- TODO - add icon variants, iOS versions -->
    <platform name="android">
        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="./www/img/logo.png" density="ldpi" />
        <icon src="./www/img/logo.png" density="mdpi" />
        <icon src="./www/img/logo.png" density="hdpi" />
        <icon src="./www/img/logo.png" density="xhdpi" />
        <icon src="./www/img/logo.png" density="xxhdpi" />
        <icon src="./www/img/logo.png" density="xxxhdpi" />
    </platform>

</widget>
